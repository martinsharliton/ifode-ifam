<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Cardapio" parent="Theme.Material3.DayNight">
        <item name="android:statusBarColor">@color/primary</item>
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryDark">@color/gray</item>
        <item name="colorOutline">@color/gray</item>

        <item name="colorOnSurfaceVariant">@color/gray</item>
    </style>

    <style name="Theme.Cardapio.NoActionBar" parent="Base.Theme.Cardapio">
        <item name="android:statusBarColor">@color/primary</item>
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryDark">@color/gray</item>
        <item name="colorOutline">@color/gray</item>
        <item name="colorOnSurfaceVariant">@color/gray</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CircleImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="RatingBarStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@color/primary</item>
    </style>

    <style name="QuestionStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="EmocardStyle">
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="EmocardContainerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">8dp</item>
    </style>


    <style name="WhiteTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:statusBarColor">@color/primary</item>
        <item name="boxStrokeColor">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="hintTextColor">@color/white</item>
        <item name="placeholderTextColor">@color/white</item>
        <item name="borderlessButtonStyle">@color/white</item>
        <item name="cursorColor">@color/white</item>
        <item name="colorContainer">@color/white</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeWidthFocused">1dp</item>
    </style>

    <style name="GreenTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary</item>
        <item name="android:editTextColor">@color/primary</item>
        <item name="hintTextColor">@color/primary</item>
        <item name="placeholderTextColor">@color/primary</item>
        <item name="borderlessButtonStyle">@color/primary</item>
        <item name="cursorColor">@color/primary</item>
        <item name="colorContainer">@color/primary</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeWidthFocused">1dp</item>
    </style>

    <style name="Theme.Cardapio" parent="Base.Theme.Cardapio" />
</resources>
