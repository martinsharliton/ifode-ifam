<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Imagem principal (fundo arredondado) -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/transparente" /> <!-- Cor da imagem/fundo -->
            <stroke
                android:color="#128C7E" /> <!-- Borda -->
        </shape>
    </item>

    <!-- Badge check no canto inferior direito -->
    <item
        android:width="24dp"
        android:height="24dp"
        android:drawable="@drawable/ic_check"
        android:gravity="bottom|end"
        />
</layer-list>
